#include <stdio.h>
#include <string.h>   // for strlen()

int main() {

    char s1[] = "abcde";   // First string
    char s2[] = "ace";     // Second string

    int n = strlen(s1);    // Length of first string
    int m = strlen(s2);    // Length of second string

    // Create DP table of size (n+1) x (m+1)
    int dp[n+1][m+1];

    // Initialize first row and first column with 0
    // Because if one string is empty â†’ LCS length = 0
    for(int i = 0; i <= n; i++) {
        dp[i][0] = 0;
    }

    for(int j = 0; j <= m; j++) {
        dp[0][j] = 0;
    }

    // Fill the DP table
    for(int i = 1; i <= n; i++) {         // Loop through s1
        for(int j = 1; j <= m; j++) {     // Loop through s2

            // If characters match
            if(s1[i-1] == s2[j-1]) {
                dp[i][j] = 1 + dp[i-1][j-1];
                // Take diagonal value + 1
            }
            else {
                // If not match, take maximum of:
                // 1. Removing char from s1
                // 2. Removing char from s2
                if(dp[i-1][j] > dp[i][j-1]) {
                    dp[i][j] = dp[i-1][j];
                } else {
                    dp[i][j] = dp[i][j-1];
                }
            }
        }
    }

    // Final answer stored in dp[n][m]
    printf("LCS Length = %d\n", dp[n][m]);

    return 0;
}
